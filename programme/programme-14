#include <iostream>
using namespace std;
float area(float l, float b){ return l*b; }
float area(float base, float height, int){ return 0.5*base*height; }
float area(float r){ return 4*3.14*r*r; }
int main() {
 cout << "Rectangle: " << area(5,4) << endl;
 cout << "Triangle: " << area(5,4,1) << endl;
 cout << "Sphere: " << area(3) << endl;
 return 0;
}
b) Unary operator overloading.
#include <iostream>
using namespace std;
class Sample {
 int x;
public:
 void getData(){ cout << "Enter number: "; cin >> x; }
 void operator -(){ x = -x; }
 void show(){ cout << "Value: " << x << endl; }
};
int main() {
 Sample s;
 s.getData();
 -s;
 s.show();
 return 0;
}
